{
  "name": "mern",
  "version": "1.0.0",
  "description": "Mern Demo",
  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "cd functions && node index.js",
    "start:dev": "concurrently \"nodemon ./functions/index.js\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.1"
  },
  "dependencies": {
    "axios": "^0.18.1",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "firebase": "^5.11.1",
    "if-env": "^1.0.4",
    "react": "^16.8.6",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.8.6",
    "react-router-dom": "^4.3.1"
  }
}
